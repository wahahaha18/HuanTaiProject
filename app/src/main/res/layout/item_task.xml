<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/c_alpha_linear"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">


    <TextView
        android:id="@+id/tv_item_task_index"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item_shape_task"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/bottom_select_color"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp" />

    <Space
        android:layout_width="20dp"
        android:layout_height="84dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tv_item_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_index"
            android:text="绿地脏乱"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_index"
            android:text="应华金发大水发的"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_index"
            android:text="阿萨德法师法"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_index"
            android:text="阿萨德法师法"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_task_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_item_task_type"
            android:layout_marginBottom="5dp"
            android:background="@drawable/item_shape_task_no"
            android:padding="5dp"
            android:text="124124312434"
            android:textColor="@color/bottom_select_color" />

        <TextView
            android:id="@+id/tv_item_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_item_task_no"
            android:layout_centerVertical="true"
            android:text="核查任务"
            android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>