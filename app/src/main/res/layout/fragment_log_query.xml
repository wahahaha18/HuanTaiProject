<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/c_alpha_linear">
            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="2017.04.16"
                android:gravity="center"
                android:drawableRight="@mipmap/hp_blue_arrow"
                android:padding="6dp"
                android:background="@color/c_alpha_et"
                android:textColor="@color/c_problem_report_left"/>
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="è‡³"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/c_problem_report_left"/>
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="2017.04.16"
                android:gravity="center"
                android:drawableRight="@mipmap/hp_blue_arrow"
                android:padding="6dp"
                android:background="@color/c_alpha_et"
                android:textColor="@color/c_problem_report_left"/>
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/b_pr_report"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/s_query"
                android:layout_gravity="center_vertical"
                android:background="@drawable/pr_report"
                android:textColor="@color/c_button_text"/>
        </LinearLayout>


    </LinearLayout>
</layout>
